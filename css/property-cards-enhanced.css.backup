/* Улучшенные карточки объектов с фото */
.enhanced-property-card {
    border: 1px solid #e0e0e0;
    border-radius: 12px;
    overflow: hidden;
    margin: 15px 0;
    background: white;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.enhanced-property-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(0,0,0,0.15);
}

.enhanced-property-card__image-container {
    position: relative;
    width: 100%;
    height: 200px;
    overflow: hidden;
}

.enhanced-property-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-bottom: 1px solid #e0e0e0;
}

.enhanced-property-card__image-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 16px;
}

.enhanced-property-card__photo-badge {
    position: absolute;
    top: 10px;
    right: 10px;
    background: rgba(0,0,0,0.7);
    color: white;
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 12px;
    backdrop-filter: blur(10px);
}

.enhanced-property-card__status-badge {
    position: absolute;
    top: 10px;
    left: 10px;
    background: #4caf50;
    color: white;
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 12px;
    font-weight: 500;
}

.enhanced-property-card__content {
    padding: 15px;
}

.enhanced-property-card__header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 10px;
    gap: 10px;
}

.enhanced-property-card__title {
    margin: 0;
    color: #2c5aa0;
    font-size: 18px;
    font-weight: 600;
    line-height: 1.3;
    flex: 1;
}

.enhanced-property-card__price {
    font-size: 20px;
    font-weight: bold;
    color: #d63384;
    text-align: right;
    white-space: nowrap;
}

.enhanced-property-card__address {
    color: #666;
    margin-bottom: 8px;
    font-size: 14px;
    line-height: 1.4;
}

.enhanced-property-card__details-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 8px;
    margin-bottom: 12px;
    font-size: 14px;
}

.enhanced-property-card__detail {
    line-height: 1.3;
}

.enhanced-property-card__price-per-m2 {
    background: #e7f3ff;
    padding: 6px 10px;
    border-radius: 6px;
    margin-bottom: 10px;
    font-size: 13px;
    color: #2c5aa0;
}

.enhanced-property-card__contacts {
    background: #f8f9fa;
    padding: 10px;
    border-radius: 6px;
    border-left: 4px solid #2c5aa0;
    font-size: 14px;
    line-height: 1.4;
}

/* Адаптивность */
@media (max-width: 768px) {
    .enhanced-property-card__details-grid {
        grid-template-columns: 1fr;
        gap: 6px;
    }
    
    .enhanced-property-card__header {
        flex-direction: column;
        align-items: flex-start;
    }
    
    .enhanced-property-card__price {
        text-align: left;
        margin-top: 5px;
    }
    
    .enhanced-property-card__title {
        font-size: 16px;
    }
    
    .enhanced-property-card__price {
        font-size: 18px;
    }
}

@media (max-width: 480px) {
    .enhanced-property-card__content {
        padding: 12px;
    }
    
    .enhanced-property-card__image-container {
        height: 180px;
    }
}

/* Сетка для карточек */
.enhanced-properties-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 20px;
    margin: 20px 0;
}

/* Заголовок секции */
.enhanced-properties-header {
    text-align: center;
    margin-bottom: 30px;
    padding: 20px;
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.enhanced-properties-header h1 {
    color: #2c5aa0;
    margin: 0 0 10px 0;
}

.enhanced-properties-stats {
    color: #888;
    font-size: 0.9rem;
}
